<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.softgridtech.androidtabfragment..MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tabOneTv"

            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:gravity="center_horizontal|center_vertical"

            android:text="TAB ONE"
            android:textColor="@android:color/white"
            android:onClick="ShowTabFragmentOne" />

        <TextView
            android:id="@+id/tabTwoTv"
            android:layout_width="0dp"

            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_bright"
            android:gravity="center_horizontal|center_vertical"
            android:text="TAB TWO"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tabThreeTv"
            android:layout_width="0dp"

            android:layout_height="80dp"
            android:layout_weight="1"

            android:background="@android:color/holo_orange_dark"
            android:gravity="center_horizontal|center_vertical"
            android:text="TAB THREE"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <fragment
        android:id="@+id/fragmentContainer"
        android:name="com.softgridtech.androidtabfragment.TabFragmentOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

         />

</LinearLayout>
